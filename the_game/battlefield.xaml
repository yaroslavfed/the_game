                            <TextBlock TextAlignment="Center" VerticalAlignment="Bottom" x:Name="hp2" Text="100" Visibility="Hidden"/>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="E3" Grid.Row="1" Grid.Column="0">
