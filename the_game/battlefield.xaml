                        </StackPanel>
                    </Grid>
                    <Grid x:Name="E6" Grid.Row="2" Grid.Column="0">
                        <StackPanel>
                            <ListBox d:ItemsSource="{d:SampleData ItemCount=1}" x:Name="enemy6" SelectionChanged="enemy6_SelectionChanged" HorizontalAlignment="Center" BorderThickness="0,0,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
