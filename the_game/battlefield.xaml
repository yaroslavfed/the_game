                                            </Grid.RowDefinitions>
                                            <TextBlock Text ="{Binding Name}" Grid.Row="0" TextAlignment="Center"/>
                                            <Image Source ="{Binding Image}" Grid.Row="1" Height="100" Width="100"/>
                                            <!--<ProgressBar Maximum ="{Binding Health}" Value="{Binding Health}" Grid.Row="2" Height="4" Width="{Binding Health, Converter={StaticResource substract}, ConverterParameter = 5}" Foreground="#FFB00606" Margin="0,3,0,0"/>-->
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ProgressBar x:Name="enemy_health_bar_6" VerticalAlignment="Bottom" Height="4" Width="100" Visibility="Hidden" Foreground="#FFB00606" Margin="0,3,0,0"/>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Bottom" x:Name="hp6" Text="100" Visibility="Hidden"/>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="E7" Grid.Row="2" Grid.Column="1">
                        <StackPanel>
                            <ListBox d:ItemsSource="{d:SampleData ItemCount=1}" x:Name="enemy7" SelectionChanged="enemy7_SelectionChanged" HorizontalAlignment="Center" BorderThickness="0,0,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="100*" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Text ="{Binding Name}" Grid.Row="0" TextAlignment="Center"/>
                                            <Image Source ="{Binding Image}" Grid.Row="1" Height="100" Width="100"/>
                                            <!--<ProgressBar Maximum ="{Binding Health}" Value="{Binding Health}" Grid.Row="2" Height="4" Width="{Binding Health, Converter={StaticResource substract}, ConverterParameter = 5}" Foreground="#FFB00606" Margin="0,3,0,0"/>-->
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ProgressBar x:Name="enemy_health_bar_7" VerticalAlignment="Bottom" Height="4" Width="100" Visibility="Hidden" Foreground="#FFB00606" Margin="0,3,0,0"/>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Bottom" x:Name="hp7" Text="100" Visibility="Hidden"/>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="E8" Grid.Row="2" Grid.Column="2">
                        <StackPanel>
                            <ListBox d:ItemsSource="{d:SampleData ItemCount=1}" x:Name="enemy8" SelectionChanged="enemy8_SelectionChanged" HorizontalAlignment="Center" BorderThickness="0,0,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="100*" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Text ="{Binding Name}" Grid.Row="0" TextAlignment="Center"/>
                                            <Image Source ="{Binding Image}" Grid.Row="1" Height="100" Width="100"/>
