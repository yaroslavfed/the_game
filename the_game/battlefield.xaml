                                                <RowDefinition Height="100*" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Text ="{Binding Name}" Grid.Row="0" TextAlignment="Center"/>
                                            <Image Source ="{Binding Image}" Grid.Row="1" Height="100" Width="100"/>
                                            <!--<ProgressBar Maximum ="{Binding Health}" Value="{Binding Health}" Grid.Row="2" Height="4" Width="{Binding Health, Converter={StaticResource substract}, ConverterParameter = 5}" Foreground="#FFB00606" Margin="0,3,0,0"/>-->
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ProgressBar x:Name="enemy_health_bar_3" VerticalAlignment="Bottom" Height="4" Width="100" Visibility="Hidden" Foreground="#FFB00606" Margin="0,3,0,0"/>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Bottom" x:Name="hp3" Text="100" Visibility="Hidden"/>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="E4" Grid.Row="1" Grid.Column="1">
                        <StackPanel>
                            <ListBox d:ItemsSource="{d:SampleData ItemCount=1}" x:Name="enemy4" SelectionChanged="enemy4_SelectionChanged" HorizontalAlignment="Center" BorderThickness="0,0,0,0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="100*" />
                                                <RowDefinition Height="auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Text ="{Binding Name}" Grid.Row="0" TextAlignment="Center"/>
                                            <Image Source ="{Binding Image}" Grid.Row="1" Height="100" Width="100"/>
                                            <!--<ProgressBar Maximum ="{Binding Health}" Value="{Binding Health}" Grid.Row="2" Height="4" Width="{Binding Health, Converter={StaticResource substract}, ConverterParameter = 5}" Foreground="#FFB00606" Margin="0,3,0,0"/>-->
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <ProgressBar x:Name="enemy_health_bar_4" VerticalAlignment="Bottom" Height="4" Width="100" Visibility="Hidden" Foreground="#FFB00606" Margin="0,3,0,0"/>
                            <TextBlock TextAlignment="Center" VerticalAlignment="Bottom" x:Name="hp4" Text="100" Visibility="Hidden"/>
                        </StackPanel>
                    </Grid>
                    <Grid x:Name="E5" Grid.Row="1" Grid.Column="2">
                        <StackPanel>
                            <ListBox d:ItemsSource="{d:SampleData ItemCount=1}" x:Name="enemy5" SelectionChanged="enemy5_SelectionChanged" HorizontalAlignment="Center" BorderThickness="0,0,0,0">
                                <ListBox.ItemTemplate>
